{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",                          
    "rootDir": "src",
    "typeRoots": [
       "./src/@types",
       "./node_modules/@types"
    ],
    "moduleResolution": "node",                             
    "outDir": "./dist",   
    "removeComments": true,                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true
  }
}
